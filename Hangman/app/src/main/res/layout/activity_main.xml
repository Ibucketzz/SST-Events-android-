<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold|italic"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txtTitle"
            android:gravity="center"
            android:text="Hangman"
            android:id="@+id/txtTitle"
            android:layout_column="0"/>
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txtWordToBeGuessed"
            android:gravity="center"
            android:text="My Word"
            android:id="@+id/WordToBeGuessed"
            android:layout_column="0"/>
    </TableRow>

    <TableRow
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:textColor="@color/colorSecondary"
            android:textColorHint="@color/colorSecondary"
            android:textSize="@dimen/edtInput"
            android:gravity="center"
            android:hint="Input one letter ( ͡° ͜ʖ ͡°)"
            android:id="@+id/edtInput"
            android:layout_column="0"/>
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:textStyle="bold|italic"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txtLettersTried"
            android:gravity="center"
            android:text="Letters tried oh yeah:"
            android:id="@+id/txtLettersTried"
            android:layout_column="0"/>
    </TableRow>

    <TableRow
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txtTriesLeft"
            android:gravity="center"
            android:text="X X X X X"
            android:id="@+id/txtTriesLeft"
            android:layout_column="0"/>
    </TableRow>

    <TableRow
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/txtReset"
            android:text="Reset"
            android:id="@+id/btnReset"
            android:layout_column="0"/>
    </TableRow>

    </TableLayout>


