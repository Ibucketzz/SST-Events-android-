<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
        tools:context="com.example.wanjianlun.scorecounter.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple Score Counter"
            android:id="@+id/textView7"
            android:layout_marginTop="11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic|bold"
            android:textSize="@dimen/txtTitle"/>

    <TextView
        android:id="@+id/txtScorePlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/playerScore"
        android:layout_alignBaseline="@+id/txtScorePlayer2"
        android:layout_alignBottom="@+id/txtScorePlayer2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtScorePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/playerScore"
        android:layout_above="@+id/btnPlayer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <Button
        android:id="@+id/btnPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorPrimary"
        android:textSize="@dimen/btnCount"
        android:onClick="countScore"
        android:tag="player2"
        android:layout_alignBaseline="@+id/btnPlayer2"
        android:layout_alignBottom="@+id/btnPlayer2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorPrimary"
        android:textSize="@dimen/btnCount"
        android:onClick="countScore"
        android:tag="player1"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/btnReset"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Reset"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:textSize="@dimen/btnReset"/>
</RelativeLayout>
